@model SurveyApp.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    @using (Html.BeginForm("TakeInitialSurvey", "Surveys", FormMethod.Post, new { @class = "form-horizontal col-md-5", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Initial Survey</h4>
        <hr />
        <div class="form-group">
            <label>What is your name/ organisation name?</label>
            @Html.TextBoxFor(m => m.OrgName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>What is your email address?</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>What is your Phone number?</label>
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Submit the survey" />
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>