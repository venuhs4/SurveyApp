@model SurveyApp.Models.SecondSurvey
@{
}

@using (Html.BeginForm("TakeSecondarySurvey", "Surveys", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Secondary Survey</h4>
    <hr />
    <div class="form-group">
        <label>What is your first name?</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>What is your last name?</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>What is your Address?</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Provide your Zipcode</label>
        @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control" })
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Submit the survey" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
